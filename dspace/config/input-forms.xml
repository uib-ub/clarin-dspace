<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE input-forms SYSTEM "input-forms.dtd">
<input-forms>

    <!-- The form-map maps collection handles to forms. DSpace does not       -->
    <!-- require a collection name to be unique, not even within a community. -->
    <!-- DSpace does however ensure that each collection's handle is unique.  -->
    <!-- Form-map provides the means to associate a unique collection name    -->
    <!-- with a form. The form-map also provides the special handle "default" -->
    <!-- (which is never a collection), here mapped to "traditional". Any     -->
    <!-- collection which does not appear in this map will be associated with -->
    <!-- the mapping for handle "default".                                    -->

    <form-map>
        <name-map collection-handle="default" form-name="traditional"/>
    </form-map>


    <!-- The form-definitions map lays out the detailed definition of all the -->
    <!-- submission forms. Each separate form set has a unique name as an     -->
    <!-- attribute. This name matches one of the names in the form-map. One   -->
    <!-- named form set has the name "traditional"; as this name suggests,    -->
    <!-- it is the old style and is also the default, which gets used when    -->
    <!-- the specified collection has no correspondingly-named form set.      -->
    <!--                                                                      -->
    <!-- Each form set contains an ordered set of pages; each page defines    -->
    <!-- one submission metadata entry screen. Each page has an ordered list  -->
    <!-- of field definitions, Each field definition corresponds to one       -->
    <!-- metatdata entry (a so-called row), which has a DC element name, a    -->
    <!-- displayed label, a text string prompt which is called a hint, and    -->
    <!-- an input-type. Each field also may hold optional elements: DC        -->
    <!-- qualifier name, a repeatable flag, and a text string whose presence  -->
    <!-- serves as a 'this field is required' flag.                           -->

    <form-definitions>

        <form name="traditional">
            <page number="1">
                <!-- Narrator -->
                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>name</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.narrator.name.label</label>
                    <input-type>name</input-type>
                    <hint>input_forms.field.viadat.narrator.name.hint</hint>
                    <required>input_forms.field.viadat.narrator.name.required</required>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>alias</dc-qualifier>
                    <repeatable>true</repeatable>
                    <label>input_forms.field.viadat.narrator.alias.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.narrator.alias.hint</hint>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>gender</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.narrator.gender.label</label>
                    <input-type value-pairs-name="viadat_gender">dropdown</input-type>
                    <hint>input_forms.field.viadat.narrator.gender.hint</hint>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>birthdate</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.narrator.birthdate.label</label>
                    <input-type>FormattedDate</input-type>
                    <hint>input_forms.field.viadat.narrator.birthdate.hint</hint>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>identifier</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.narrator.identifier.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.narrator.identifier.hint</hint>
                    <required>input_forms.field.viadat.narrator.identifier.required</required>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>degree</dc-qualifier>
                    <repeatable>true</repeatable>
                    <label>input_forms.field.viadat.narrator.degree.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.narrator.degree.hint</hint>
                    <autocomplete>solr-viadat.narrator.degree_ac</autocomplete>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>profession</dc-qualifier>
                    <label>input_forms.field.viadat.narrator.profession.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.narrator.profession.hint</hint>
                    <autocomplete>solr-viadat.narrator.profession_ac</autocomplete>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>keywords</dc-qualifier>
                    <repeatable>true</repeatable>
                    <repeatable-parse>true</repeatable-parse>
                    <label>input_forms.field.viadat.narrator.keywords.label</label>
                    <input-type>twobox</input-type>
                    <hint>input_forms.field.viadat.narrator.keywords.hint</hint>
                    <autocomplete>solr-viadat.narrator.keywords_ac</autocomplete>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>consent</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.narrator.consent.label</label>
                    <input-type value-pairs-name="viadat_consent">dropdown</input-type>
                    <hint>input_forms.field.viadat.narrator.consent.hint</hint>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>characteristics</dc-qualifier>
                    <label>input_forms.field.viadat.narrator.characteristics.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.narrator.characteristics.hint</hint>
                    <autocomplete>solr-viadat.narrator.characteristics_ac</autocomplete>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>contact</dc-qualifier>
                    <label>input_forms.field.viadat.narrator.contact.label</label>
                    <input-type>textarea</input-type>
                    <hint>input_forms.field.viadat.narrator.contact.hint</hint>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>narrator</dc-element>
                    <dc-qualifier>note</dc-qualifier>
                    <label>input_forms.field.viadat.narrator.note.label</label>
                    <input-type>textarea</input-type>
                    <hint>input_forms.field.viadat.narrator.note.hint</hint>
                </field>
            </page>

            <page number="2">

                <!-- Interview-->

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>interview</dc-element>
                    <dc-qualifier>type</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.interview.type.label</label>
                    <input-type value-pairs-name="interview_types">dropdown</input-type>
                    <hint>input_forms.field.viadat.interview.type.hint</hint>
                    <required>input_forms.field.viadat.interview.type.required</required>
                </field>

                <field>
                    <dc-schema>dc</dc-schema>
                    <dc-element>language</dc-element>
                    <dc-qualifier>iso</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.dc.language.iso.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.dc.language.iso.hint</hint>
                    <autocomplete>json_static-iso_langs.json</autocomplete>
                    <required>input_forms.field.dc.language.iso.required</required>
                </field>

                <field>
                    <dc-schema>viadat</dc-schema>
                    <dc-element>interview</dc-element>
                    <dc-qualifier>identifier</dc-qualifier>
                    <repeatable>false</repeatable>
                    <label>input_forms.field.viadat.interview.identifier.label</label>
                    <input-type>onebox</input-type>
                    <hint>input_forms.field.viadat.interview.identifier.hint</hint>
                    <required>input_forms.field.viadat.interview.identifier.required</required>
                </field>


            </page>

            <!-- file technical details
            <page number="3">

            </page>
            -->
        </form>

    </form-definitions>

    <!-- form-value-pairs populate dropdown and qualdrop-value lists.          -->
    <!-- The form-value-pairs element holds child elements named 'value-pairs' -->
    <!-- A 'value-pairs' element has a value-pairs-name and a dc-term          -->
    <!-- attribute. The dc-term attribute specifies which to which Dublin Core -->
    <!-- Term this set of value-pairs applies.                                 -->
    <!--     Current dc-terms are: identifier-pairs, type-pairs, and           -->
    <!--     language_iso-pairs. The name attribute matches a name             -->
    <!--     in the form-map, above.                                           -->
    <!-- A value-pair contains one 'pair' for each value displayed in the list -->
    <!-- Each pair contains a 'displayed-value' element and a 'stored-value'   -->
    <!-- element. A UI list displays the displayed-values, but the program     -->
    <!-- stores the associated stored-values in the database.                  -->

    <form-value-pairs>
        <value-pairs value-pairs-name="viadat_gender" dc-term="">
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_gender.male</displayed-value>
                <stored-value>muž</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_gender.female</displayed-value>
                <stored-value>žena</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_gender.unspecified</displayed-value>
                <stored-value>nespecifikováno</stored-value>
            </pair>
        </value-pairs>

        <value-pairs value-pairs-name="viadat_consent" dc-term="">
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_consent.yes</displayed-value>
                <stored-value>Ano</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_consent.no</displayed-value>
                <stored-value>Ne</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.viadat_consent.extras</displayed-value>
                <stored-value>Včetně dalších ujednání</stored-value>
            </pair>
        </value-pairs>

        <value-pairs value-pairs-name="interview_types" dc-term="">
            <pair>
                <displayed-value>input_forms.value_pairs.interview_types.biographical</displayed-value>
                <stored-value>životopisný</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.interview_types.thematic</displayed-value>
                <stored-value>tematický</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.interview_types.biographical_thematic</displayed-value>
                <stored-value>životopisně-tematický</stored-value>
            </pair>
            <pair>
                <displayed-value>input_forms.value_pairs.interview_types.other</displayed-value>
                <stored-value>ostatní</stored-value>
            </pair>
        </value-pairs>
    </form-value-pairs>


</input-forms>
